<% if user_signed_in? %>
  <%= user_icon %>
  <%= link_to "Logged in as #{current_user.username || current_user.email}", current_user %> |
  <span class="glyphicon glyphicon-log-out"></span> <%= link_to 'Logout ', destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to 'Login', new_user_session_path %>
  <span class="glyphicon glyphicon-log-in"> </span>
<% end %>
